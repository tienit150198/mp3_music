<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_titlePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="PLAYLIST DÀNH CHO BẠN"
        android:drawableRight="@drawable/ic_more"
        android:drawableTint="@android:color/black"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/ic_more" />

    <ListView
        android:id="@+id/lv_playlist"
        android:layout_below="@+id/tv_titlePlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </ListView>
</RelativeLayout>