<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#30012D">

    <RelativeLayout
        android:id="@+id/relativeTheloai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <TextView
            android:id="@+id/tv_chudetheloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chủ Đề Và Thể Loại "
            android:drawableRight="@drawable/ic_more"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/myScollChudeTheLoai"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeTheloai"
        android:scrollbars="none"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp">

    </HorizontalScrollView>
</RelativeLayout>