<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="173dp"
        android:layout_height="130dp"
        android:contentDescription="thumbnail of mv"
        android:src="@drawable/demo_mv"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/imgThumbnail"
        app:layout_constraintEnd_toEndOf="@id/imgThumbnail"
        app:layout_constraintTop_toBottomOf="@id/imgThumbnail"
        android:id="@+id/tvNameMv"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:text="ERIK - 'Em Không Sai, Chúng Ta Sai' (Official MV)"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>